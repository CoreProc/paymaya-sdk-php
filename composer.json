{
    "name": "coreproc/paymaya-sdk",
    "description": "A better PayMaya SDK",
    "keywords": [
        "coreproc",
        "paymaya-sdk"
    ],
    "homepage": "https://github.com/coreproc/paymaya-sdk-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Bautista",
            "email": "chris.bautista@coreproc.ph",
            "homepage": "https://coreproc.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.0 || ^7.0"
    },
    "require-dev": {
        "dms/phpunit-arraysubset-asserts": "^0.4.0",
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.2",
        "symfony/var-dumper": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "CoreProc\\PayMaya\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoreProc\\PayMaya\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
